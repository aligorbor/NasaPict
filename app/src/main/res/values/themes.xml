<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaPicture" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="AppShapeAppearance.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.NasaPicture.Default" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDefault</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDefault</item>
        <item name="colorOnPrimary">@color/primaryTextColorDefault</item>
        <item name="colorSecondary">@color/secondaryColorDefault</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorDefault</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDefault</item>
        <item name="colorError">@color/colorErrorDefault</item>
        <item name="colorOnError">@color/colorOnErrorDefault</item>
        <item name="colorSurface">@color/colorSurfaceDefault</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDefault</item>
    </style>

    <style name="Theme.NasaPicture.Mars" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorMars</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorMars</item>
        <item name="colorOnPrimary">@color/primaryTextColorMars</item>
        <item name="colorSecondary">@color/secondaryColorMars</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorMars</item>
        <item name="colorOnSecondary">@color/secondaryTextColorMars</item>
        <item name="colorError">@color/colorErrorDefault</item>
        <item name="colorOnError">@color/colorOnErrorDefault</item>
        <item name="colorSurface">@color/secondaryLightColorMars</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDefault</item>
        <item name="fontFamily">@font/abhaya_libre</item>
        <item name="android:fontFamily">@font/abhaya_libre</item>
    </style>


    <style name="Theme.NasaPicture.Moon" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorMoon</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorMoon</item>
        <item name="colorOnPrimary">@color/primaryTextColorMoon</item>
        <item name="colorSecondary">@color/secondaryColorMoon</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorMoon</item>
        <item name="colorOnSecondary">@color/secondaryTextColorMoon</item>
        <item name="colorError">@color/colorErrorDefault</item>
        <item name="colorOnError">@color/colorOnErrorDefault</item>
        <item name="colorSurface">@color/secondaryLightColorMoon</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDefault</item>
        <item name="fontFamily">@font/prompt_extralight</item>
        <item name="android:fontFamily">@font/prompt_extralight</item>
    </style>

    <style name="Theme.NasaPicture.Earth">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorEarth</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorEarth</item>
        <item name="colorOnPrimary">@color/primaryTextColorEarth</item>
        <item name="colorSecondary">@color/secondaryColorEarth</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorEarth</item>
        <item name="colorOnSecondary">@color/secondaryTextColorEarth</item>
        <item name="colorError">@color/colorErrorDefault</item>
        <item name="colorOnError">@color/colorOnErrorDefault</item>
        <item name="colorSurface">@color/secondaryLightColorEarth</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDefault</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

</resources>