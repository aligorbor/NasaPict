<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainerNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/noteImageViewPriority"
        android:layout_width="@dimen/notes_30"
        android:layout_height="@dimen/notes_30"
        android:layout_marginStart="@dimen/notes_5"
        app:layout_constraintBottom_toBottomOf="@+id/noteTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/noteTextView"
        app:srcCompat="@drawable/indicator_priority" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/noteTextView"
        android:layout_width="@dimen/notes_width_header"
        android:layout_height="@dimen/notes_height_header"
        android:layout_marginStart="@dimen/notes_10"
        android:gravity="center"
        android:hint="@string/header_of_your_note"
        android:inputType="textMultiLine"
        android:text=""
        android:textSize="@dimen/notes_text_15"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/noteImageViewPriority"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/noteScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/noteDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_note_here"
                android:padding="@dimen/notes_10"
                android:text=""
                android:textColor="#000"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moveItemUpNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/notes_10"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/moveItemDownNote"
        app:layout_constraintEnd_toStartOf="@+id/addItemImageViewNote"
        app:layout_constraintStart_toEndOf="@id/noteTextView"
        app:layout_constraintTop_toTopOf="@+id/noteTextView"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moveItemDownNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/notes_10"
        android:tint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="@+id/noteTextView"
        app:layout_constraintEnd_toStartOf="@+id/addItemImageViewNote"
        app:layout_constraintStart_toEndOf="@id/noteTextView"
        app:layout_constraintTop_toBottomOf="@+id/moveItemUpNote"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/addItemImageViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/notes_10"
        android:background="@color/secondaryColorDefault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dragHandleImageViewNote"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_plus_fab" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/removeItemImageViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/notes_10"
        app:layout_constraintEnd_toStartOf="@+id/dragHandleImageViewNote"
        app:layout_constraintTop_toBottomOf="@id/addItemImageViewNote"
        app:srcCompat="@drawable/ic_archive" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragHandleImageViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/notes_15"
        android:tint="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/noteTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/noteTextView"
        app:srcCompat="@drawable/ic_hamburger_menu_bottom_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="@+id/noteScrollView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
