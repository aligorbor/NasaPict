<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.geekbrains.android2.nasapicture">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NasaPicture.Default">
        <activity android:name=".MainActivity"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.api.ApiActivity"
            android:configChanges="uiMode"/>
        <activity android:name=".view.api.ApiBottomActivity"
            android:configChanges="uiMode"/>
        <activity android:name=".view.animations.AnimationsActivity" />
        <activity android:name=".view.animations.ObjAnimatorActivity" />
        <activity android:name=".view.animations.AnimationsActivityBonus" />

    </application>

</manifest>